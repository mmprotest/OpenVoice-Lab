<Page
    x:Class="OpenVoiceLab.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <ScrollViewer>
        <StackPanel Spacing="12" Padding="24">
            <TextBlock Text="Settings" FontSize="22" FontWeight="SemiBold" />
            <StackPanel Orientation="Horizontal" Spacing="12">
                <ComboBox Header="Default Backend" Width="200" x:Name="BackendBox">
                    <ComboBoxItem Content="auto" />
                    <ComboBoxItem Content="cpu" />
                    <ComboBoxItem Content="cuda" />
                </ComboBox>
                <ComboBox Header="Default Model Size" Width="200" x:Name="ModelSizeBox">
                    <ComboBoxItem Content="0.6b" />
                    <ComboBoxItem Content="1.7b" />
                </ComboBox>
            </StackPanel>
            <CheckBox Content="Keep reference audio by default" IsChecked="{x:Bind ViewModel.KeepRefAudio, Mode=TwoWay}" />
            <ComboBox Header="Default pronunciation profile"
                      Width="280"
                      ItemsSource="{x:Bind ViewModel.PronunciationProfiles}"
                      SelectedValue="{x:Bind ViewModel.SelectedPronunciationProfileId, Mode=TwoWay}"
                      SelectedValuePath="Id"
                      DisplayMemberPath="Name" />
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Delete all local data" Click="OnDeleteData" />
                <Button Content="Refresh Engine Log" Click="OnRefreshLog" />
            </StackPanel>
            <TextBlock Text="Engine Log" FontSize="18" FontWeight="SemiBold" />
            <TextBox Text="{x:Bind ViewModel.EngineLog, Mode=OneWay}" AcceptsReturn="True" Height="240" TextWrapping="Wrap" />
            <TextBlock Text="{x:Bind ViewModel.Status, Mode=OneWay}" />
        </StackPanel>
    </ScrollViewer>
</Page>
