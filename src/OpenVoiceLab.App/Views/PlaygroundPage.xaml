<Page
    x:Class="OpenVoiceLab.Views.PlaygroundPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <ScrollViewer>
        <StackPanel Spacing="12" Padding="24">
            <TextBlock Text="TTS Playground" FontSize="22" FontWeight="SemiBold" />
            <ComboBox Header="Voice" ItemsSource="{x:Bind ViewModel.Voices}" SelectedItem="{x:Bind ViewModel.SelectedVoice, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" />
                            <TextBlock Text="{Binding Type}" FontSize="12" Opacity="0.6" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <TextBox Header="Text" AcceptsReturn="True" Height="120" TextWrapping="Wrap" Text="{x:Bind ViewModel.Text, Mode=TwoWay}" />
            <ComboBox Header="Language" ItemsSource="{x:Bind ViewModel.Languages}" SelectedItem="{x:Bind ViewModel.SelectedLanguage, Mode=TwoWay}" />
            <TextBox Header="Style Instruction" PlaceholderText="Warm, calm, cinematic" Text="{x:Bind ViewModel.Style, Mode=TwoWay}" />
            <CheckBox Content="Enable SSML-lite" IsChecked="{x:Bind ViewModel.EnableSsmlLite, Mode=TwoWay}" />
            <StackPanel Orientation="Horizontal" Spacing="12">
                <ComboBox Header="Model Size" Width="200" ItemsSource="{x:Bind ViewModel.ModelSizes}" SelectedItem="{x:Bind ViewModel.SelectedModelSize, Mode=TwoWay}" />
                <ComboBox Header="Backend" Width="200" ItemsSource="{x:Bind ViewModel.Backends}" SelectedItem="{x:Bind ViewModel.SelectedBackend, Mode=TwoWay}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button Content="Generate" Click="OnGenerate" />
                <Button Content="Stream" Click="OnStream" />
                <Button Content="Play" Click="OnPlay" />
                <Button Content="Export WAV" Click="OnExport" />
            </StackPanel>
            <TextBlock Text="{x:Bind ViewModel.Status, Mode=OneWay}" />
            <TextBlock Text="Streaming playback buffers PCM into a WAV file for stable playback." FontSize="12" Opacity="0.7" />
        </StackPanel>
    </ScrollViewer>
</Page>
