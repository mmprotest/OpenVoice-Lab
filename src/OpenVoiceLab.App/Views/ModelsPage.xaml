<Page
    x:Class="OpenVoiceLab.Views.ModelsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="using:OpenVoiceLab.ViewModels"
    mc:Ignorable="d">
    <ScrollViewer>
        <StackPanel Padding="24" Spacing="12">
            <TextBlock Text="Models" FontSize="22" FontWeight="SemiBold" />
            <TextBlock Text="Download models directly in the app. Required models unlock generate, clone, and design features." Opacity="0.7" />
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Refresh" Click="OnRefresh" />
                <Button Content="Download required for v1" Click="OnDownloadRequired" />
            </StackPanel>
            <ListView ItemsSource="{x:Bind ViewModel.Models}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="viewModels:ModelItemViewModel">
                        <Border Padding="12" BorderThickness="1" BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}">
                            <StackPanel Spacing="8">
                                <StackPanel>
                                    <TextBlock Text="{x:Bind DisplayName}" FontWeight="SemiBold" />
                                    <TextBlock Text="{x:Bind ModelId}" FontSize="12" Opacity="0.7" TextWrapping="Wrap" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="Status:" />
                                    <TextBlock Text="{x:Bind Status}" />
                                    <TextBlock Text="{x:Bind ProgressText}" Opacity="0.6" />
                                </StackPanel>
                                <ProgressBar Value="{x:Bind Progress}"
                                             Minimum="0"
                                             Maximum="100"
                                             Visibility="{x:Bind ShowProgress ? Visibility.Visible : Visibility.Collapsed}" />
                                <TextBlock Text="{x:Bind Error}"
                                           Foreground="Tomato"
                                           Visibility="{x:Bind HasError ? Visibility.Visible : Visibility.Collapsed}" />
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Button Content="Download"
                                            Click="OnDownloadModel"
                                            IsEnabled="{x:Bind CanDownload}" />
                                    <Button Content="Open folder"
                                            Click="OnOpenFolder"
                                            IsEnabled="{x:Bind CanOpenFolder}" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" />
        </StackPanel>
    </ScrollViewer>
</Page>
