<Page
    x:Class="OpenVoiceLab.Views.ProjectsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <StackPanel Spacing="12" Padding="24">
        <TextBlock Text="Projects" FontSize="22" FontWeight="SemiBold" />
        <StackPanel Orientation="Horizontal" Spacing="8">
            <TextBox x:Name="ProjectNameBox" PlaceholderText="New project name" Width="280" />
            <Button Content="Create" Click="OnCreate" />
            <Button Content="Refresh" Click="OnRefresh" />
        </StackPanel>
        <ListView ItemsSource="{x:Bind ViewModel.Projects}" SelectedItem="{x:Bind ViewModel.SelectedProject, Mode=TwoWay}" SelectionChanged="OnSelect">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Name}" />
                        <TextBlock Text="{Binding CreatedAt}" FontSize="12" Opacity="0.6" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <TextBlock Text="{x:Bind ViewModel.Status, Mode=OneWay}" />
    </StackPanel>
</Page>
