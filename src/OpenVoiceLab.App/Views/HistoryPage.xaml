<Page
    x:Class="OpenVoiceLab.Views.HistoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Spacing="12" Padding="24">
        <TextBlock Text="History" FontSize="22" FontWeight="SemiBold" />
        <TextBox Header="Search" PlaceholderText="Search by text, voice, date" />
        <ListView Height="300" />
        <StackPanel Orientation="Horizontal" Spacing="12">
            <Button Content="Replay" />
            <Button Content="Re-export" />
        </StackPanel>
    </StackPanel>
</Page>
